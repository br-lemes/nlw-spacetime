{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "simple-import-sort",
        "@typescript-eslint"
    ],
    "rules": {
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "simple-import-sort/imports": [
            "warn",
            {
                "groups": [
                    ["^\\u0000"],
                    ["^node:"],
                    ["^@?\\w"],
                    ["^"],
                    ["^\\."]
                ]
            }
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
